<div class="row">

	<h1><%= @template.name %></h1>

	<% if @template.questions.any? %>
	<form>

		<% @questions.each do |question| %>
		<p>
			<label><%= question.content %></label>
			<input type="text">
		</p>

		<% end %>

		<button id="copy-button" data-reveal-id="myModal">Build HPI</button>
	</form>     

	<% end %>

	<%= link_to "Template List", templates_path %>
</div>

<div id="myModal" class="reveal-modal" data-reveal>
	<a class="close-reveal-modal">&#215;</a>
</div>